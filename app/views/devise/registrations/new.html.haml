.col-xs-12
  %h1
    Tweets_Getter
  %h3 
    Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      %h5
        = f.label :email
        %br
        = f.email_field :email, autofocus: true, style: "color: #000"
    .form-group
      %h5
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br
        = f.password_field :password, autocomplete: "off", style: "color: #000"
    .form-group
      %h5
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation, autocomplete: "off", style: "color: #000"
    .actions
      = f.submit "Sign up", class: "btn btn-lg btn-info"
  = render "devise/shared/links"