.col-xs-12
  %h1
    Tweets_Getter
  %h3 
    Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
    %h5
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, style: "color: #000"
    .form-group
    %h5
      = f.label :password
      %br
      = f.password_field :password, autocomplete: "off", style: "color: #000"
    - if devise_mapping.rememberable?
      .form-group
      %h5
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: "btn btn-lg btn-info"
  = render "devise/shared/links"